<section class="vh-200" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-12 col-lg-12 col-xl-12">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Sign up</h3>
            <%= form_for(resource, as: resource_name, class: 'form-group' , url: registration_path(resource_name)) do |f| %>
            <div class = "row">
            <div class = "col-lg-6 col-sm-6 col-md-6">
            
            <div class="form-outline mb-4" style="text-align:left;">
              Name : <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-outline mb-4" style="text-align:left;">
               Email :<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
        
        <div class="form-outline mb-4" style="text-align:left;">

            <%= f.fields_for :address, class: 'form-group'  do |address_subform| %>
    
              Country: <%=address_subform.text_field :country, class: 'form-control'%>
              City: <%=address_subform.text_field :city, class: 'form-control'%>
              Street: <%=address_subform.text_field :street, class: 'form-control'%>
              
            <%end%>

          </div>

            <div class="form-outline mb-4" style="text-align:left;">
              Age : <%= f.text_field :age, class: 'form-control' %>
            </div>

            <div class="form-outline mb-4" style="text-align:left;">
              Image :<%= f.file_field :image, class: 'form-control-file', id:"exampleFormControlFile1", style: "margin:10px;" %>
            </div>
            
            </div>

            <div class = "col-lg-6 col-sm-6 col-md-6">

            <div class="form-outline mb-4" style="text-align:left;">
               
                  Password :<%= f.password_field :password, autocomplete: "new-password", class: 'form-control'%>
            </div>

            <div class="form-outline mb-4" style="text-align:left;">
              Confirm Password :<%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <%= f.submit "Sign up",class: 'form-control btn-primary', style: 'margin-top:10px'%>
            <hr class="my-4">
            Already have an account?
            <%= render "devise/shared/links" %> 
            </div>
            <% end %>

            

          </div>
        </div>
      </div>
    </div>
  </div>
</section>