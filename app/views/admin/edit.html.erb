<div class="container">
    <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit User</h4>
</div>


<div class="row justify-content-center">


    <%= form_for @user, url:admin_path do |form| %>

        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.label :age %>
            <%= form.text_field :age, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.file_field :image, multiple:false, class: "form-control-file", id:"exampleFormControlFile1", style: "margin:10px;" %>
        </div>
        <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.label :password %>
            <%= form.text_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.submit class: 'form-control btn-primary' %>
        </div>

    <% end %>


</div>
</div>