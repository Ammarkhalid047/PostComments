<div class="container" data-turbolinks="false">
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Age</th>
      <th scopr="col">Total posts</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="all_users_record">
    <% @users.each do |user|%>
    <tr>
      <th scope="row"><%=user.id%></th>
      <td><%=user.name%></td>
      <td><%=user.email%></td>
      <td><%=user.role%></td>
      <td><%=user.age%></td>
      <td><%=user.post.count%></td>
      <td style="text-align:center">
        <%= link_to 'Edit User', edit_admin_path(user), :class => 'btn-primary form-control' %>
      </td>
      <td style="text-align:center">
        <%= link_to "Delete User", admin_path(user), class: 'form-control btn-primary ',  data: { confirm: "Are you sure?" }, method: :delete, :remote => true %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>
</div>