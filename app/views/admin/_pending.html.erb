<div class="container">
<center><h4>Posts Approvals</h4></center>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Posted by</th>
      <th scope="col">Post title</th>
      <th scopr="col">Status</th>
      <th scopr="col">Total posts by user</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="all_users_record">
    <% @posts.get_approvals.each do |post|%>
    <tr>
      <th scope="row"><%=post.id%></th>
      <td><%=post.user.name%></td>
      <td><%=post.title%></td>
      <td><%=post.status%></td>
      <td><%=post.user.post.count%></td>
       <td><%= link_to 'Show', post_path(post.id), class:'form-control btn-primary', style:'text-align:center'%></td>
    </tr>
    <%end%>
  </tbody>
</table>
</div>
</div>
<div class="container">
<center><h4>Accounts Approvals</h4></center>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Age</th>
      <th scopr="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="all_users_record">
    <% @users.get_status.each do |user|%>
    <tr>
      <th scope="row"><%=user.id%></th>
      <td><%=user.name%></td>
      <td><%=user.email%></td>
      <td><%=user.age%></td>
      <td><%=user.status%></td>
      <%if user.status == 'active'%>
       <td><%= link_to 'Inactive Account', change_status_admin_path(user), class:'form-control btn-primary', style:'text-align:center'%></td>
      <%else%>
       <td><%= link_to 'Activate Account', change_status_admin_path(user), class:'form-control btn-primary', style:'text-align:center'%></td>
       <%end%>
    </tr>
    <%end%>
  </tbody>
</table>