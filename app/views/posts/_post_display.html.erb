<div class="container">
        <div class="row justify-content-center">
        <h3>Your Posts</h3>
        <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Title</th>
                
                <th scope="col" colspan="1">Image</th>
                <th scope="col" colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                 <% if can? :update, post%>

                   <tr>
                    <td><%= post.title %></td>
                    
                     <% if(post.images.present?) %> 
                    <% for image in post.images do %>
                    <td><%= image_tag image.url, style:"width:200px; display:block;" %></td>
                    <% end %>
                    <% else %> 
                    <td></td>
                    
                    <% end %>   
                    <td data-turbo="false">
                    <a href="<%= post_path(post.id) %>" data-turbolinks="false">Show</a></td> 
                    <td><%= link_to 'Delete',
                        post_path(post.id),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
                    </td>             
                </tr>
                <%end%>
            <% end %>
        </tbody>
        </table>
        </div>
</div>
    